<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonGetAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT * FROM CP" />


    <EditText
        android:id="@+id/editTextVoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="WHERE clause" />

    <Button
        android:id="@+id/buttonGetSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT * FROM CP WHERE VOTO =" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9932CC"
        android:gravity="center"
        android:text="SELECT result"
        android:textColor="#FFFFFF" />

    <ListView
        android:id="@+id/lvSelectResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
